<div class="container">
  <%= form_with url: html_signatures_path, method: :post do %>
    <div>
      <%= label_tag :signer1_email, "Signer 1 Email" %>
      <%= email_field_tag :signer1_email, nil, required: true %>
    </div>
    <div>
      <%= label_tag :signer2_email, "Signer 2 Email" %>
      <%= email_field_tag :signer2_email, nil, required: true %>
    </div>
    <%= submit_tag "Sign", class: "btn btn-primary", style: "margin-top: 40px;" %>
  <% end %>
</div>
