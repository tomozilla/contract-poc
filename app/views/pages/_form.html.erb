<%= form_with(model: page, data: { turbo: false }, local: true) do |f| %>
  <div class="mb-4">
    <%= f.label :title, class: "block font-medium" %>
    <%= f.text_field :title, class: "w-full border rounded p-2" %>
  </div>

  <div data-controller="tiptap">
    <%= f.hidden_field :body, data: { tiptap_target: "input" } %>
    <div
      data-tiptap-target="content"
      class="prose border rounded p-4 mb-4"
    ></div>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
