<h1 class="text-2xl font-bold mb-4">All Pages</h1>
<%= link_to "New Page", new_page_path, class: "btn btn-secondary mb-6" %>
<ul>
  <% @pages.each do |page| %>
    <li class="mb-2">
      <%= link_to page.title, page_path(page), class: "text-blue-600 hover:underline" %>
      • <%= link_to "Edit", edit_page_path(page), class: "text-green-600" %>
      • <%= link_to "Delete", page_path(page),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "text-red-600" %>
    </li>
  <% end %>
</ul>
