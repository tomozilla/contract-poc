<div class="container">
  <h1>Create a New Signature Request</h1>

  <%= form_with model: @document, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Template Name", class: "form-label" %><br>
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :pdf_url, "Public PDF URL", class: "form-label" %><br>
      <%= f.url_field :pdf_url, placeholder: "https://â€¦", class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :signer_email, "Signer's Email", class: "form-label" %><br>
      <%= f.email_field :signer_email, required: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.file_field :pdf_file %>
    </div>
    <div class="mb-3">
      <%= f.submit "Create & Sign", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
