<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <h1>New Editor</h1>
    
    <%= form_with model: @editor, url: editor_index_path do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
