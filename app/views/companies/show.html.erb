<div class="page-header">
  <%= link_to companies_path, class: 'btn btn-default' do %>
    All Companies
  <% end %>
  <%= link_to edit_company_path(@company), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <%= link_to company_path(@company), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
    Destroy this company
  <% end %>
  <h1>Show company</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @company.name %></dd>
  <dt>Address:</dt>
  <dd><%= @company.address %></dd>
  <dt>Industry:</dt>
  <dd><%= @company.industry %></dd>
  <dt>Website:</dt>
  <dd><%= @company.website %></dd>
  <dt>Year:</dt>
  <dd><%= @company.year %></dd>
</dl>
