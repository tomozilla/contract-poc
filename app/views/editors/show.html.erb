<div class="container">
  <div class="my-4">
    <%= link_to "← Back to Editors", editors_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="card">
    <div class="card-header">
      <h1><%= @editor.title %></h1>
    </div>
    <div class="card-body">
      <div class="prose">
        <%= raw @editor.body %>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to "Edit", edit_editor_path(@editor), class: "btn btn-primary" %>
      <%= button_to "Delete", editor_path(@editor), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
